{
	"name": "filterData",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "joinresult",
						"type": "DatasetReference"
					},
					"name": "company"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "filterData",
						"type": "DatasetReference"
					},
					"name": "storeFilterData"
				}
			],
			"transformations": [
				{
					"name": "CastSalaryColumn",
					"description": "Updating the columns 'Salary' for cast from char to Integer"
				},
				{
					"name": "greaterThanMeanSalary"
				}
			],
			"scriptLines": [
				"source(output(",
				"          EmployeeID as string,",
				"          Name as string,",
				"          Salary as string,",
				"          JoiningDate as string,",
				"          DepartmentID as string,",
				"          DepartmentName as string,",
				"          Location as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> company",
				"company derive(Salary = toInteger(Salary)) ~> CastSalaryColumn",
				"CastSalaryColumn filter(Salary > 61839) ~> greaterThanMeanSalary",
				"greaterThanMeanSalary sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          Id as string,",
				"          service as string,",
				"          Manager as string",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> storeFilterData"
			]
		}
	}
}